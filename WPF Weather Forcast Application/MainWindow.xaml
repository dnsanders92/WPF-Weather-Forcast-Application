<Window x:Class="WPF_Weather_Forcast_Application.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Weather_Forcast_Application"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="700"
        Background="{StaticResource WindowColor}">
    <Grid>
        <TabControl TabStripPlacement="Left">
            <TabItem>
                <TabItem.Header>
                    <TextBlock Text="Today's Weather"/>
                </TabItem.Header>
                <Grid Background="{StaticResource WindowColor}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Grid Grid.ColumnSpan="1" HorizontalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Label x:Name="LBL_City" Grid.Row="0" Content="City Name" HorizontalAlignment="Center" VerticalAlignment="Top"  FontSize="20" FontWeight="Bold"/>
                        <Image x:Name="IMG_CurrentConditions" Grid.Row="1" HorizontalAlignment="Left" Height="130" VerticalAlignment="Top" Width="130" Source="/placeholder.png"/>
                        <Label x:Name="LBL_CurrentTemp" Grid.Row="2" Content="Temp" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
                    </Grid>

                    <Grid Grid.Column="1" HorizontalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Label x:Name="LBL_Metrics" Grid.Row="0" Content="Metrics" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Top" Width="155" Height="39" FontSize="20" FontWeight="Bold"/>
                        <Label x:Name="LBL_FeelsLike" Grid.Row="1" Content="Feels Like" HorizontalAlignment="Center" VerticalAlignment="Top" />
                        <Label x:Name="LBL_CurrentHumidity" Grid.Row="2" Content="Humidity" HorizontalAlignment="Center"  VerticalAlignment="Top" />
                        <Label x:Name="LBL_CurrentPressure" Grid.Row="3" Content="Air Pressure" HorizontalAlignment="Center" VerticalAlignment="Top" />
                        <Label x:Name="LBL_WeatherConditions" Grid.Row="4" Content="Conditions" HorizontalAlignment="Center" VerticalAlignment="Top" />
                    </Grid>

                    <Grid Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Label x:Name="LBL_NextFiveHours" Grid.Row="0" Grid.ColumnSpan="5" Content="Next Five Hours" HorizontalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Top" FontWeight="Bold" FontSize="20"/>

                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="10">
                            <Image x:Name="IMG_Icon_Hour1" HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" Width="50" Source="/placeholder.png"/>
                            <Label x:Name="LBL_HourTemp1" Content="Temp" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="50"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="10">
                            <Image x:Name="IMG_Icon_Hour2" HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" Width="50" Source="/placeholder.png"/>
                            <Label x:Name="LBL_HourTemp2" Content="Temp" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="2" Margin="10">
                            <Image x:Name="IMG_Icon_Hour3" HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" Width="50" Source="/placeholder.png"/>
                            <Label x:Name="LBL_HourTemp3" Content="Temp" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="3" Margin="10">
                            <Image x:Name="IMG_Icon_Hour4" HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" Width="50" Source="/placeholder.png"/>
                            <Label x:Name="LBL_HourTemp4" Content="Temp" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="4" Margin="10">
                            <Image x:Name="IMG_Icon_Hour5" HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" Width="50" Source="/placeholder.png"/>
                            <Label x:Name="LBL_HourTemp5" Content="Temp" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50"/>
                        </StackPanel>

                    </Grid>
                </Grid>
            </TabItem>

            <TabItem >
                <TabItem.Header>
                    <TextBlock Text="Historical Weather"/>
                </TabItem.Header>
            </TabItem>
            <TabItem >
                <TabItem.Header>
                    <TextBlock Text="5 Day Forecast"/>
                </TabItem.Header>
                <Grid Background="{StaticResource WindowColor}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                        <Label x:Name="LBL_NextFive" Content="Next Five Days" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
                    
                    <Grid x:Name="Grid_Day1" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Image x:Name="IMG_Icon_Day_1" Grid.Row="0" HorizontalAlignment="Left" Height="55" VerticalAlignment="Top" Width="55" Source="/placeholder.png"/>
                        <Label x:Name="LBL_HighTemp1" Grid.Row="1" Content="High Temp" HorizontalAlignment="Left"  VerticalAlignment="Top"/>
                        <Label x:Name="LBL_LowTemp1" Grid.Row="2" Content="LowTemp" HorizontalAlignment="Left"  VerticalAlignment="Top"/>
                    </Grid>

                    <Grid x:Name="Grid_Day1_Copy" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center">
                        <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <Image x:Name="IMG_Icon_Day_2" Grid.Row="0" HorizontalAlignment="Left" Height="55" VerticalAlignment="Top" Width="55" Source="/placeholder.png"/>
                            <Label x:Name="LBL_HighTemp2" Grid.Row="1" Content="High Temp" HorizontalAlignment="Left"  VerticalAlignment="Top"/>
                            <Label x:Name="LBL_LowTemp2" Grid.Row="2" Content="LowTemp" HorizontalAlignment="Left"  VerticalAlignment="Top"/>
                    </Grid>

                    <Grid x:Name="Grid_Day1_Copy1" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center">
                            <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>
                        <Image x:Name="IMG_Icon_Day_3" Grid.Row="0" HorizontalAlignment="Left" Height="55"  VerticalAlignment="Top" Width="55" Source="/placeholder.png"/>
                        <Label x:Name="LBL_HighTemp3" Grid.Row="1" Content="High Temp" HorizontalAlignment="Left"  VerticalAlignment="Top"/>
                        <Label x:Name="LBL_LowTemp3" Grid.Row="2" Content="LowTemp" HorizontalAlignment="Left"  VerticalAlignment="Top"/>
                    </Grid>

                    <Grid x:Name="Grid_Day1_Copy2" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center">
                        <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                    </Grid.RowDefinitions>
                        <Image x:Name="IMG_Icon_Day_4" Grid.Row="0" HorizontalAlignment="Left" Height="55"  VerticalAlignment="Top" Width="55" Source="/placeholder.png"/>
                        <Label x:Name="LBL_HighTemp4" Grid.Row="1" Content="High Temp" HorizontalAlignment="Left"  VerticalAlignment="Top"/>
                        <Label x:Name="LBL_LowTemp4" Grid.Row="2" Content="LowTemp" HorizontalAlignment="Left"  VerticalAlignment="Top"/>
                    </Grid>

                    <Grid x:Name="Grid_Day1_Copy3" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Center">
                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                        </Grid.RowDefinitions>
                        <Image x:Name="IMG_Icon_Day_5" Grid.Row="0" HorizontalAlignment="Left" Height="55"  VerticalAlignment="Top" Width="55" Source="/placeholder.png"/>
                        <Label x:Name="LBL_HighTemp5" Grid.Row="1" Content="High Temp" HorizontalAlignment="Left"  VerticalAlignment="Top"/>
                        <Label x:Name="LBL_LowTemp5" Grid.Row="2" Content="LowTemp" HorizontalAlignment="Left"  VerticalAlignment="Top"/>
                    </Grid>
                </Grid>
            </TabItem>

            <TabItem Height="auto" Focusable="False">
                <TabItem.Header>
                    <StackPanel>
                        <TextBox x:Name="SearchBox" Width="150" Text="Search..." TextChanged="SearchBox_TextChanged" />
                        <ListBox x:Name="ResultsList" Width="150" Height="auto" Visibility="Collapsed" ClipToBounds="False"/>
                    </StackPanel>
                </TabItem.Header>
            </TabItem>




        </TabControl>

    </Grid>
</Window>
