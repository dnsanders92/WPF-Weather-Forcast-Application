<Window x:Class="WPF_Weather_Forcast_Application.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Weather_Forcast_Application"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="700"
        Background="{StaticResource WindowColor}">
    <Grid>
        <TabControl TabStripPlacement="Left">
            <TabItem>
                <TabItem.Header>
                    <TextBlock Text="Today's Weather"/>
                </TabItem.Header>
                <Grid Background="{StaticResource WindowColor}">
                    <Grid>
                        <Label x:Name="LBL_City" Content="City Name" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="155" Height="39" FontSize="20" FontWeight="Bold"/>
                        <Grid Margin="165,10,10,10">
                            <Label x:Name="LBL_Metrics" Content="Metrics" HorizontalAlignment="Center" VerticalAlignment="Top" Width="155" Height="39" FontSize="20" FontWeight="Bold"/>
                            <Label x:Name="LBL_FeelsLike" Content="Feels Like" HorizontalAlignment="Center" Margin="0,57,0,0" VerticalAlignment="Top" Width="155"/>
                            <Label x:Name="LBL_CurrentHumidity" Content="Humidity" HorizontalAlignment="Center" Margin="0,83,0,0" VerticalAlignment="Top" Width="155"/>
                            <Label x:Name="LBL_CurrentPressure" Content="Air Pressure" HorizontalAlignment="Center" VerticalAlignment="Top" Width="155" Margin="0,110,0,0"/>
                            <Label x:Name="LBL_WeatherConditions" Content="Conditions" HorizontalAlignment="Center" Margin="0,135,0,0" VerticalAlignment="Top" Width="155"/>
                        </Grid>
                        <Image x:Name="IMG_CurrentConditions" HorizontalAlignment="Left" Height="130" Margin="10,54,0,0" VerticalAlignment="Top" Width="130" Source="/placeholder.png"/>
                        <Label x:Name="LBL_CurrentTemp" Content="Temp" HorizontalAlignment="Left" Margin="10,167,0,0" VerticalAlignment="Top" Width="140" Height="65" FontSize="36"/>
                    </Grid>
                    <Grid Margin="10,245,345,3">
                        <Label x:Name="LBL_NextFiveHours" Content="Next Five Hours" HorizontalAlignment="Left" VerticalAlignment="Top" Width="201" FontWeight="Bold" FontSize="20" Margin="10,0,0,0"/>
                        <Image x:Name="IMG_Icon_Hour1" HorizontalAlignment="Left" Height="50" Margin="16,44,0,0" VerticalAlignment="Top" Width="50" Source="/placeholder.png"/>
                        <Image x:Name="IMG_Icon_Hour2" HorizontalAlignment="Left" Height="50" Margin="71,44,0,0" VerticalAlignment="Top" Width="50" Source="/placeholder.png"/>
                        <Image x:Name="IMG_Icon_Hour3" HorizontalAlignment="Left" Height="50" Margin="126,44,0,0" VerticalAlignment="Top" Width="50" Source="/placeholder.png"/>
                        <Image x:Name="IMG_Icon_Hour4" HorizontalAlignment="Left" Height="50" Margin="181,44,0,0" VerticalAlignment="Top" Width="50" Source="/placeholder.png"/>
                        <Image x:Name="IMG_Icon_Hour5" HorizontalAlignment="Left" Height="50" Margin="236,44,0,0" VerticalAlignment="Top" Width="50" Source="/placeholder.png"/>
                        <Label x:Name="LBL_HourTemp1" Content="Temp" HorizontalAlignment="Left" Margin="16,99,0,0" VerticalAlignment="Top" Width="50"/>
                        <Label x:Name="LBL_HourTemp2" Content="Temp" HorizontalAlignment="Left" Margin="71,99,0,0" VerticalAlignment="Top" Width="50"/>
                        <Label x:Name="LBL_HourTemp3" Content="Temp" HorizontalAlignment="Left" Margin="126,99,0,0" VerticalAlignment="Top" Width="50"/>
                        <Label x:Name="LBL_HourTemp4" Content="Temp" HorizontalAlignment="Left" Margin="181,99,0,0" VerticalAlignment="Top" Width="50"/>
                        <Label x:Name="LBL_HourTemp5" Content="Temp" HorizontalAlignment="Left" Margin="236,99,0,0" VerticalAlignment="Top" Width="50"/>
                    </Grid>
                </Grid>
            </TabItem>

            <TabItem >
                <TabItem.Header>
                    <TextBlock Text="Historical Weather"/>
                </TabItem.Header>
            </TabItem>
            <TabItem >
                <TabItem.Header>
                    <TextBlock Text="5 Day Forecast"/>
                </TabItem.Header>
                <Grid Background="{StaticResource WindowColor}">
                    <Label x:Name="LBL_NextFive" Content="Next Five Days" HorizontalAlignment="Left" Margin="14,10,0,0" VerticalAlignment="Top" Width="155" Height="39" FontSize="20" FontWeight="Bold"/>
                    <Grid x:Name="Grid_Day1" Margin="0,52,0,276" HorizontalAlignment="Center" Width="310">
                        <Image x:Name="IMG_Icon_Day_1" HorizontalAlignment="Left" Height="55" Margin="5,7,0,0" VerticalAlignment="Top" Width="55" Source="/placeholder.png"/>
                        <Label x:Name="LBL_HighTemp1" Content="High Temp" HorizontalAlignment="Left" Margin="90,16,0,0" VerticalAlignment="Top"/>
                        <Label x:Name="LBL_LowTemp1" Content="LowTemp" HorizontalAlignment="Left" Margin="168,16,0,0" VerticalAlignment="Top"/>
                    </Grid>
                    <Grid x:Name="Grid_Day1_Copy" Margin="0,114,0,214" HorizontalAlignment="Center" Width="310">
                        <Image x:Name="IMG_Icon_Day_2" HorizontalAlignment="Left" Height="55" Margin="5,7,0,0" VerticalAlignment="Top" Width="55" Source="/placeholder.png"/>
                        <Label x:Name="LBL_HighTemp2" Content="High Temp" HorizontalAlignment="Left" Margin="90,16,0,0" VerticalAlignment="Top"/>
                        <Label x:Name="LBL_LowTemp2" Content="LowTemp" HorizontalAlignment="Left" Margin="168,16,0,0" VerticalAlignment="Top"/>
                    </Grid>
                    <Grid x:Name="Grid_Day1_Copy1" Margin="0,176,0,152" HorizontalAlignment="Center" Width="310">
                        <Image x:Name="IMG_Icon_Day_3" HorizontalAlignment="Left" Height="55" Margin="5,7,0,0" VerticalAlignment="Top" Width="55" Source="/placeholder.png"/>
                        <Label x:Name="LBL_HighTemp3" Content="High Temp" HorizontalAlignment="Left" Margin="90,16,0,0" VerticalAlignment="Top"/>
                        <Label x:Name="LBL_LowTemp3" Content="LowTemp" HorizontalAlignment="Left" Margin="168,16,0,0" VerticalAlignment="Top"/>
                    </Grid>
                    <Grid x:Name="Grid_Day1_Copy2" Margin="0,238,0,90" HorizontalAlignment="Center" Width="310">
                        <Image x:Name="IMG_Icon_Day_4" HorizontalAlignment="Left" Height="55" Margin="5,7,0,0" VerticalAlignment="Top" Width="55" Source="/placeholder.png"/>
                        <Label x:Name="LBL_HighTemp4" Content="High Temp" HorizontalAlignment="Left" Margin="90,16,0,0" VerticalAlignment="Top"/>
                        <Label x:Name="LBL_LowTemp4" Content="LowTemp" HorizontalAlignment="Left" Margin="168,16,0,0" VerticalAlignment="Top"/>
                    </Grid>
                    <Grid x:Name="Grid_Day1_Copy3" Margin="0,300,0,28" HorizontalAlignment="Center" Width="310">
                        <Image x:Name="IMG_Icon_Day_5" HorizontalAlignment="Left" Height="55" Margin="5,7,0,0" VerticalAlignment="Top" Width="55" Source="/placeholder.png"/>
                        <Label x:Name="LBL_HighTemp5" Content="High Temp" HorizontalAlignment="Left" Margin="90,16,0,0" VerticalAlignment="Top"/>
                        <Label x:Name="LBL_LowTemp5" Content="LowTemp" HorizontalAlignment="Left" Margin="168,16,0,0" VerticalAlignment="Top"/>
                    </Grid>
                </Grid>
            </TabItem>

            <TabItem Height="auto" Focusable="False">
                <TabItem.Header>
                    <StackPanel>
                        <TextBox x:Name="SearchBox" Width="150" Text="Search..." TextChanged="SearchBox_TextChanged" />
                        <ListBox x:Name="ResultsList" Width="150" Height="auto" Visibility="Collapsed" ClipToBounds="False"/>
                    </StackPanel>
                </TabItem.Header>
            </TabItem>
            



        </TabControl>

    </Grid>
</Window>
